<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bill_detail_header"
        android:textSize="20sp"
        android:layout_margin="3dp"/>

    <TextView
        android:id="@+id/alert_bill_detail_is_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alert_bill_detail_is_empty" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_bill_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/bill_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp" />

    <TextView
        android:id="@+id/bill_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dp" />

</LinearLayout>